.PHONY = all wave clean help
EXE = wave
CFLAGS = -Wall -Wextra -std=c11
LDFLAGS = -lm -llapack

all: wave

wave:	wave.o
			$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)

clean:
			@rm -f *~ *.o wave

help:
			@echo "Usage:"
			@echo "  make all			Build the software"
			@echo "  make wave			Build the executable file from wave.c"
			@echo "  make clean			Remove all files generated by make"
